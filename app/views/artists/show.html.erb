<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @artist.name %>
</p>

<p>
  <strong>Hits:</strong>
  <%= @artist.hits %>
</p>

<p>
  <strong>Genre:</strong>
  <%= @artist.genre_id %>
</p>

<p>
  <strong>Songs by Artist</strong>
  <% @artist.songs.each do |song| %>

    <ul>
      <li> <%= song.name %> </li>
    </ul>
    <% end %>
</p>

